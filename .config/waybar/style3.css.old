/* ---- Waybar Styles (Catppuccin Macchiato) ---- */
* {
  margin-top: 1px;
  margin-bottom: 1px;
}

/* Overall Waybar styling */
#waybar {
  background-color: rgba(30, 30, 46, 0.6); /* Base background with some transparency */
  color: #cad3f5; /* Text color - Latte Text */
  /* border-radius: 0px; */
  font-family:
    "JetBrainsMono Nerd Font",
    "FiraCode Nerd Font",
    "monospace"; /* Modern font with Nerd Font support */
  font-size: 14px;
  margin: 5px; /* Margin around the bar */
  padding: 0 10px; /* Horizontal padding for the bar itself */
}

/* Module general styling - Apply padding and margin consistently */
/* Reset default margins for modules to control them specifically below */
#waybar .modules-left > widget,
#waybar .modules-center > widget,
#waybar .modules-right > widget {
  margin: 0; /* Reset default margins */
  padding: 0 8px; /* Default horizontal padding for most modules */
  transition: all 0.3s cubic-bezier(0.55, 0, 0.1, 1);
  /* Individual module styles will override this padding where needed */
}

#waybar > .modules-left > widget:hover,
#waybar > .modules-center > widget:hover,
#waybar > .modules-right > widget:hover {
  background-color: rgba(69, 70, 97, 0.7); /* Subtle hover effect - Surface1 */
  border-radius: 8px;
}

/* -------------------- Left Modules -------------------- */

/* Workspaces */
#workspaces {
  margin-right: 5px; /* Space after workspaces */
}
#workspaces button {
  padding: 0 6px; /* Slightly less padding for buttons within workspaces */
  background-color: transparent;
  color: #cad3f5; /* Text color */
  border: none;
  font-weight: bold;
}

#workspaces button:hover {
  background-color: #494d64; /* Surface0 */
  border-radius: 8px;
  color: #cad3f5;
}

#workspaces button.active {
  background-color: #8bd5ca; /* Teal */
  color: #1e202e; /* Text for active workspace */
  border-radius: 8px;
}

#workspaces button.urgent {
  background-color: #ed8796; /* Red */
  color: #1e202e;
  border-radius: 8px;
}

/* Hyprland Mode */
#mode {
  color: #b7bdf8; /* Lavender */
  padding: 0 8px;
  background-color: #363a4f; /* Surface2 */
  border-radius: 8px;
  font-style: italic;
  font-weight: bold;
  margin-right: 5px; /* Space after mode */
}

/* Hardware Group (CPU, Memory, Temperature) */
#group-hardware {
  border-radius: 8px;
  background-color: #363a4f; /* Surface2 */
  padding: 0 5px; /* Padding inside the group box */
  margin-right: 5px; /* Space after the group */
}

#cpu,
#memory,
#temperature {
  padding: 0 6px; /* Minimal padding between individual hardware stats */
}

#cpu {
  color: #a6da95; /* Green */
}

#memory {
  color: #f5bde6; /* Pink */
}

#temperature {
  color: #f0c6c6; /* Peach */
  margin-left: 2px;
}

/* Idle Inhibitor */
#idle_inhibitor {
  color: #f5a97f; /* Orange */
  background-color: #363a4f; /* Surface2 */
  border-radius: 8px;
  padding: 0 8px;
  margin-left: 10px;
  margin-right: 5px; /* Space after idle inhibitor */
}

/* Hyprland Language */
#language {
  color: #7dc4e4; /* Sky */
  background-color: #363a4f; /* Surface2 */
  border-radius: 8px;
  padding: 0 8px;
  margin-right: 5px; /* Space after language */
}

/* Hyprland Window */
#hyprland-window {
  /* Note: text truncation (max-length) is handled in the Waybar config */
  color: #b7bdf8; /* Lavender */
  font-weight: bold;
  /* Removed padding here, relies on general widget padding */
}

/* -------------------- Center Modules -------------------- */

/* Tray */
#tray {
  background-color: #363a4f; /* Surface2 */
  border-radius: 8px;
  padding: 0 8px; /* Padding inside the tray */
  margin: 0 5px; /* Space around tray */
}

#tray > .icon {
  -webkit-box-shadow: none;
  box-shadow: none;
  text-shadow: none;
  color: #cad3f5; /* Text color */
}

/* Power Profiles Daemon */
#power-profiles-daemon {
  background-color: #363a4f; /* Surface2 */
  border-radius: 8px;
  padding: 0 13px 0 7px;
  margin: 0; /* Space around power profiles */
}

#power-profiles-daemon.performance {
  color: #ed8796; /* Red */
}

#power-profiles-daemon.balanced {
  color: #f0c6c6; /* Peach */
}

#power-profiles-daemon.power-saver {
  color: #a6da95; /* Green */
}

/* Clock */
#clock {
  color: #8bd5ca; /* Teal */
  background-color: #363a4f; /* Surface2 */
  border-radius: 8px;
  padding: 0 10px; /* Slightly more padding for clock for emphasis */
  margin-left: 5px; /* Space before clock */
}

/* -------------------- Right Modules -------------------- */

/* Bluetooth */
#bluetooth {
  background-color: #363a4f; /* Surface2 */
  border-radius: 8px;
  padding: 0 8px;
  margin-left: 5px; /* Space before bluetooth */
}

#bluetooth.on {
  color: #8bd5ca; /* Teal */
}

#bluetooth.off {
  color: #cad3f5; /* Text color */
}

#bluetooth.disabled {
  color: #5b6078; /* Surface0 - slightly desaturated */
}

#bluetooth.connected {
  color: #b7bdf8; /* Lavender */
}

/* Network */
#network {
  background-color: #363a4f; /* Surface2 */
  border-radius: 8px;
  padding: 0 8px;
  margin-left: 5px; /* Space before network */
}

#network.disconnected {
  color: #ed8796; /* Red */
}

#network.linked {
  color: #cad3f5; /* Text color */
}

/* Pulseaudio */
#pulseaudio {
  background-color: #363a4f; /* Surface2 */
  border-radius: 8px;
  padding: 0 8px;
  margin-left: 5px; /* Space before pulseaudio */
}

#pulseaudio.muted {
  color: #ed8796; /* Red */
}

/* Battery */
#battery {
  background-color: #363a4f; /* Surface2 */
  border-radius: 8px;
  padding: 0 8px;
  margin-left: 5px; /* Space before battery */
}

#battery.good {
  color: #a6da95; /* Green */
}

#battery.warning {
  color: #f0c6c6; /* Peach */
}

#battery.critical {
  color: #ed8796; /* Red */
  animation: blink 1s steps(1) infinite;
}

@keyframes blink {
  TO {
    background-color: #ed8796; /* Red */
    color: #1e202e; /* Background for text */
  }
}

#battery.charging {
  color: #7dc4e4; /* Sky */
}

#battery.plugged {
  color: #f5a97f; /* Orange */
}

/* Backlight */
#backlight {
  background-color: #363a4f; /* Surface2 */
  border-radius: 8px;
  padding: 0 8px;
  margin-left: 5px; /* Space before backlight */
}

/* Custom Power Button */
#custom-power {
  background-color: #ed8796; /* Red */
  color: #1e202e; /* Text color for the button */
  border-radius: 8px;
  padding: 0 10px 0 6px; /* Slightly more padding for a button */
  margin-left: 5px; /* More space to separate it visually as an action button */
}

#custom-power:hover {
  background-color: #ee99a0; /* Lighter red on hover */
  color: #1e202e;
}

/* Custom Notification (if uncommented) */
#custom-notification {
  background-color: #363a4f; /* Surface2 */
  border-radius: 8px;
  padding: 0 8px;
  color: #f5a97f; /* Orange */
  margin-left: 5px; /* Spacing for notification module */
}

#custom-notification .notif-icon {
  color: #ed8796; /* Red for notification dot */
}

/* Tooltip styles */
tooltip {
  background-color: #1e202e; /* Crust */
  color: #cad3f5; /* Text */
  border-radius: 8px;
  padding: 10px;
  font-family:
    "JetBrainsMono Nerd Font",
    "FiraCode Nerd Font",
    "monospace";
  font-size: 13px;
  border: 1px solid #494d64; /* Surface0 border */
}

tooltip label {
  color: #cad3f5;
}

/* Custom calendar in clock tooltip */
#clock tooltip label {
  color: #cad3f5;
  font-weight: normal;
}
